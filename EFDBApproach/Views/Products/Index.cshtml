@model List<EFDBApproach.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Products</h2>
<a href="/products/create">Create</a>
<form class="form-inline" action="/products/index">
    <label for="search">Search:</label>
    <input type="search" class="form-control"id="search" name="search" placeholder="search" value="@ViewBag.search" />
    <button type="submit" class="btn btn-primary">Go</button>
</form>
<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Product Price</th>
        <th>Date of Purchase</th>
        <th>Availability Status</th>
        <th>Category ID</th>
        <th>Brand Id</th>
        <th>Active</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.ProductId</td>
    <td>@item.ProductName</td>
    <td>@item.Price</td>
    <td>@item.DateOfPurchase</td>
    <td>@item.AvailabilityStatus</td>
    <td>@item.CategoryId</td>
    <td>@item.BrandId</td>
    <td>@item.Active</td>
    <td><a href="/Products/details/@item.ProductId">Details</a> 
         <a href="/Products/edit/@item.ProductId">Edit</a>
    <a href="/Products/delete/@item.ProductId">Delete</a>
    </td>
</tr>
    }
</table>

