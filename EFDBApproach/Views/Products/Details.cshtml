@model EFDBApproach.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Details</h2>
<table class="table">
    <tr>
        <th>ProductId</th>
        <td>@Model.ProductId</td>
    </tr>
    <tr>
        <th>ProductName</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>ProductPrice</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>DateOfPurchase</th>
        <td>@Model.DateOfPurchase.Value.ToString("d/mm/yyyy")</td>
    </tr>
    <tr>
        <th>AvailabilityStatus</th>
        <td>@Model.AvailabilityStatus</td>
    </tr>
    <tr>
        <th>BrandID</th>
        <td>@Model.BrandId</td>
    </tr>
    <tr>
        <th>Active</th>
        <th>@Model.Active</th>
    </tr>

</table>

<a href="/products/index">Back to Products</a>